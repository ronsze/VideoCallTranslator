<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient
                android:endColor="@color/togglebtnClick"
                android:startColor="@color/togglebtnClick"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/togglebtnNon"
                android:startColor="@color/togglebtnNon"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>